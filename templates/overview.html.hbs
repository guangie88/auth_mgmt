<!DOCTYPE html>
<html>
  <head>
    <title>SSF Authentication Management Overview</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Vue.js -->
    <script src="/js/vue@2.4.1.js"></script>
    <script src="/js/vue-cookies@1.5.4.js"></script>
    <link rel="stylesheet" href="/css/element-ui@1.3.7-index.css">
    <script src="/js/element-ui@1.3.7-index.js"></script>

    <!-- axios -->
    <script src="/js/axios@0.16.2.min.js"></script>

    <!-- underscore.js -->
    <script src="/js/underscore@1.8.3-min.js"></script>

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="/css/bootstrap@4.0.0-alpha.6.min.css">
    <script src="/js/jquery-3.2.1.slim.min.js"></script>
    <script src="/js/tether@1.4.0.min.js"></script>
    <script src="/js/bootstrap@4.0.0-alpha.6.min.js"></script>

    <!-- self css -->
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body>
    <div id="app" class="container">
      <div class="display-table">
        <svg class="logo-small"><image class="logo-small" xlink:href="/images/favicon.svg" /></svg>
        <div class="display-4 display-table-cell valign-middle">SSF Auth Management Overview</div>
      </div>

      <div class="vspacer"></div>

      <span class="alert alert-info alert-no-margin display-table row">
        <span class="display-table-cell valign-middle col-sm-10"><big>Current username: <b>{{username}}</b></big></span>
        <span class="display-table-cell valign-middle col-sm-2" align="right">
          <button class="btn btn-danger" @click="logout()">Logout</button>
        </span>
      </span>

      <div v-if="{{has_prev_action}}" class="alert alert-success alert-no-margin">
        <strong>{{prev_action_msg}}</strong>
      </div>

      <ul class="nav nav-tabs nav-fill">
        <li class="nav-item">
          <a class="nav-link active" href="#info" data-toggle="tab" role="tab">Info</a>
        </li>
        <li class="nav-item" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.addUsers">
          <a class="nav-link" href="#add" data-toggle="tab" role="tab">Add User</a>
        </li>
        <li class="nav-item" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.updateUsers">
          <a class="nav-link" href="#update" data-toggle="tab" role="tab">Update User</a>
        </li>
        <li class="nav-item" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.deleteUsers">
          <a class="nav-link" href="#delete" data-toggle="tab" role="tab">Delete Users</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="info" role="tabpanel">
          <div class="vspacer"></div>
          <table class="table table-striped table-bordered table-hover">
            <thead class="thead-default">
              <tr>
                <th>Operation keys</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(value, key) in adminTaskCreds">
                <td><span v-text="key"></span></td>
                <td>
                  <!-- boolean -->
                  <input v-if="typeof(value) === 'boolean'" type="checkbox" v-model="adminTaskCreds[key]" disabled>

                  <!-- string -->
                  <span v-else-if="typeof(value) === 'string'" v-text="value"></span>

                  <!-- object -->
                  <div v-else-if="value !== null && typeof(value) === 'object'">
                    <div class="form-group" v-for="(innerValue, innerKey) in value">
                      <label :for="innerKey" v-text="innerKey"></label>
                      <input class="form-control" type="text" :id="innerKey" v-model="value[innerKey]" disabled>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="add" role="tabpanel" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.addUsers">
          <div v-if="toAddCreds !== null" class="form-horizontal">
            <div class="vspacer"></div>
            <div v-if="errorAddMsg" class="alert alert-danger alert-no-margin">
              <strong v-text="errorAddMsg"></strong>
            </div>

            <!-- actual login username and password -->
            <div class="form-group">
              <label for="outerUsername">Username:</label>
              <input class="form-control" type="text" id="outerUsername" v-model="toAddCreds.username">
            </div>

            <div class="form-group">
              <label for="outerPassword">Password:</label>
              <input class="form-control" type="password" id="outerPassword" v-model="toAddCreds.password">
            </div>

            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-default">
                <tr>
                  <th>Operation keys</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(value, key) in toAddCreds.creds">
                  <td><span v-text="key"></td>
                  <td>
                    <div class="form-group">
                    
                      <!-- boolean -->      
                      <input v-if="typeof(value) === 'boolean'" type="checkbox" v-model="toAddCreds.creds[key]">

                      <!-- string -->
                      <input class="form-control" v-else-if="typeof(value) === 'string'" type="text" v-model="toAddCreds.creds[key]">

                      <!-- object -->
                      <div v-else-if="value !== null && typeof(value) === 'object'">
                        <div class="form-group" v-for="(innerValue, innerKey) in value">
                          <label :for="innerKey" v-text="innerKey"></label>
                          <input v-if="innerKey === 'password'" class="form-control" type="password" :id="innerKey" v-model="value[innerKey]">
                          <input v-else class="form-control" type="text" :id="innerKey" v-model="value[innerKey]">
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>

            <button :disabled="!toAddCreds.username || !toAddCreds.password" class="btn btn-primary btn-block vspacer" @click="addUser()">Add user</button>
          </div>
        </div>

        <div class="tab-pane" id="update" role="tabpanel" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.updateUsers">
          <div class="vspacer"></div>
          <div v-if="errorUpdateMsg" class="alert alert-danger alert-no-margin">
            <strong v-text="errorUpdateMsg"></strong>
          </div>

          <div id="accordion" role="tablist" aria-multiselectable="true">
            <!-- top -->
            <div class="card">
              <div class="card-header" role="tab" id="headingOne">
                <h5 class="mb-0">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Selected User Credentials
                  </a>
                </h5>
              </div>

              <form class="form-horizontal" @submit.prevent="">
                <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
                  <div class="card-block">
                    <div class="form-group">
                      <label for="selectedUpdateUser">User to update:</label>
                      <select id="selectedUpdateUser" class="form-control custom-select" v-model="selectedUpdate.username">
                        <option v-for="toUpdateUser in toUpdateUsers" v-text="toUpdateUser.username"></option>
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="selectedUpdatePassword">Password:</label>
                      <input class="form-control" type="password" id="selectedUpdatePassword" v-model="selectedUpdate.password">
                    </div>

                    <button :disabled="!selectedUpdate.username || !selectedUpdate.password" class="btn btn-primary btn-block" type="submit" @click="exchange()">Retrieve user permissions</button>
                  </div>
                </div>
              </form>
            </div>

            <!-- bottom -->
            <div class="card" v-if="selectedExchange !== null">
              <div class="card-header" role="tab" id="headingTwo">
                <h5 class="mb-0">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    Update Details
                  </a>
                </h5>
              </div>

              <div id="collapseTwo" class="collapse show form-horizontal" role="tabpanel" aria-labelledby="headingTwo">
                <div class="card-block">
                  <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-default">
                      <tr>
                        <th>Operation keys</th>
                        <th>Value</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr v-for="(value, key) in selectedExchange">
                        <td><span v-text="key"></td>
                        <td>
                          <div class="form-group">
                          
                            <!-- boolean -->      
                            <input v-if="typeof(value) === 'boolean'" type="checkbox" v-model="selectedExchange[key]">

                            <!-- string -->
                            <input class="form-control" v-else-if="typeof(value) === 'string'" type="text" v-model="selectedExchange[key]">

                            <!-- object -->
                            <div v-else-if="value !== null && typeof(value) === 'object'">
                              <div class="form-group" v-for="(innerValue, innerKey) in value">
                                <label :for="innerKey" v-text="innerKey"></label>
                                <input v-if="innerKey === 'password'" class="form-control" type="password" :id="innerKey" v-model="value[innerKey]">
                                <input v-else class="form-control" type="text" :id="innerKey" v-model="value[innerKey]">
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>

                  <button class="btn btn-primary btn-block" @click="updateUser()">Update user permissions</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-pane" id="delete" role="tabpanel" v-if="adminTaskCreds !== null && adminTaskCreds.allowedRoles.deleteUsers">
          <div class="vspacer"></div>
          <div v-if="errorDeleteMsg" class="alert alert-danger alert-no-margin">
            <strong v-text="errorDeleteMsg"></strong>
          </div>

          <h5 v-if="toDeleteUsers && toDeleteUsers.length <= 1">No other user entries to delete!</h5>
          <div v-else>
            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-default">
                <tr>
                  <th>Users</th>
                  <th>Delete?</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="toDeleteUser in toDeleteUsers" v-if="toDeleteUser.username !== '{{username}}'">
                  <td><span v-text="toDeleteUser.username"></span></td>
                  <td><input type="checkbox" v-model="toDeleteUser.delete"></td>
                </tr>
              </tbody>
            </table>

            <button class="btn btn-danger btn-block vspacer" :disabled="_.every(toDeleteUsers, u => !u.delete)" @click="deleteUsers()">Delete user(s)</button>
          </div>
        </div>
      </div>
    </div>

    <!-- must be placed after all the templates -->
    <script src="/js/overview.js"></script>
  </body>
</html>
