<!DOCTYPE html>
<html>
  <head>
    <title>SSF Authentication Management Login</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Vue.js -->
    <script src="/js/vue@2.4.1.js"></script>
    <link rel="stylesheet" href="/css/element-ui@1.3.7-index.css">
    <script src="/js/element-ui@1.3.7-index.js"></script>

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="/css/bootstrap@4.0.0-alpha.6.min.css">
    <script src="/js/jquery-3.2.1.slim.min.js"></script>
    <script src="/js/tether@1.4.0.min.js"></script>
    <script src="/js/bootstrap@4.0.0-alpha.6.min.js"></script>

    <!-- self css -->
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body>
    <div id="app" class="container">
      <div class="vspacer"></div>
      
      <div class="display-table">
        <svg class="logo-big"><image class="logo-big" xlink:href="/images/favicon.svg" /></svg>
        <div class="display-4 display-table-cell align-middle">SSF Auth Management Login</div>
      </div>

      <div class="vspacer"></div>

      <div v-if="{{fail}}" class="alert alert-danger" role="alert">
        <div class="display-table-cell"><svg class="glyph align-middle"><image class="glyph" xlink:href="/images/x.svg" /></svg></div>
        <strong class="display-table-cell align-middle">Invalid credentials provided!</strong>
      </div>

      <form action="/login" method="post">
        <div class="form-group">
          <label for="username">Username:</label>
          <input id="username" name="username" type="text" class="form-control" placeholder="Enter your username" v-model="username" autofocus>
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input id="password" name="password" type="password" class="form-control" placeholder="Enter the password" v-model="password">
        </div>

        <button :disabled="!username || !password" type="submit" class="btn btn-primary btn-block">Log in</button>
      </form>
    </div>

    <!-- must be placed after all the templates -->
    <script src="/js/index.js"></script>
  </body>
</html>
